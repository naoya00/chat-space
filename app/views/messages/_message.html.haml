.chat-main__messages--box
  .chat-main__messages--box-user
    .chat-main__messages--box-user-name
      = message.user.name
    .chat-main__messages--box-user-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages--box-massege
    - if message.content.present?
      %p.lower-message__content
        = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?